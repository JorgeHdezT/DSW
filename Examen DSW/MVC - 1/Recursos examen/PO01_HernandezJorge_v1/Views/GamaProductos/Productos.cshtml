@model PO01_HernandezJorge_v1.Models.GamaProducto

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos de la gama @Html.DisplayFor(model => model.DescripcionTexto)</h1>

<div>
    <h4>GamaProducto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionTexto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionTexto)
        </dd>
    </dl>
</div>

