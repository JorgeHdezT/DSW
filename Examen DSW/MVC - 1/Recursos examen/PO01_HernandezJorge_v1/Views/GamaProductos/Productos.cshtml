<button style="border: 3px solid dodgerblue; color: white; font-size: 10px; padding: 2px; border-radius: 10px;">
    <a class="nav-link text-dark" asp-area="Productos" asp-controller="Productos" asp-action="Create">
        Crear Nuevo Producto
    </a>
</button>

