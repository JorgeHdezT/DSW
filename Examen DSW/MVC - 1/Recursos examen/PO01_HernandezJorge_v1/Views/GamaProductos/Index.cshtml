@model IEnumerable<PO01_HernandezJorge_v1.Models.GamaProducto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear Nueva Gama</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionTexto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionHtml)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionTexto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionHtml)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                <a asp-action="Productos" asp-route-id="@item.Gama">Productos</a> |
                <a asp-action="Edit" asp-route-id="@item.Gama">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Gama">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Gama">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
